doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-formulario
            h1 Iniciar Sesión en UpTask

            if error 
                p.alerta.error= error
                                
            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo
                    label(for="email") Email:
                    input(type="email" name="email" placeholder="Tu Email")
                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder="Tu Password")
                .campo.enviar
                    input.boton(type="submit" value="Iniciar Sesión")
                .campo
                    a(href="/crear-cuenta") Crea una cuenta